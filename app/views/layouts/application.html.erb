<!DOCTYPE html>
<html>
  <head>
    <title>Ratebeer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navibar">
      <%= link_to 'breweries', breweries_path %>
      <%= link_to 'beers', beers_path %>
      <%= link_to 'ratings', ratings_path%>
      <%= link_to 'users', users_path%>
      <%= link_to 'Join a club', new_membership_path%>
      <%= link_to 'Create a club', new_beer_club_path%>
      <%= link_to 'Clubs', beer_clubs_path%>
      |
      <% if current_user%>
        <%= link_to current_user.username, current_user%>
        <%= link_to 'rate a beer', new_rating_path%>
        <%= link_to 'logout', signout_url, method: :delete%>
      <% else%>
        <%= link_to 'login', signin_url%>
        <%= link_to 'signup', signup_url%>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
