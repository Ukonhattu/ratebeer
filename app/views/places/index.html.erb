<p id="notice"><%= notice %></p>

<%= form_tag places_path do %>
  city <%= text_field_tag :city, params[:city] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @places %>
  <h2>Current weather in <%= @weather['location']['name'] %></h2>
  <p> <%= @weather['current']['condition']['text']%> <%= @weather['current']['temp_c']%>  Celcius</p>
  <p>Wind: <%= @weather['current']['wind_kph']%>kph</p>

  <table>
 <thead>
   <th>id</th>
   <th>name</th>
   <th>status</th>
   <th>street</th>
   <th>city</th> 
   <th>zip</th> 
   <th>country</th> 
   <th>overall</th>               
 </thead>
 <% @places.each do |place| %>
   <tr>
     <td><%= place.id %></td>
     <td><%= link_to place.name, place_path(place.id) %></td>
     <td><%= place.status %></td>
     <td><%= place.street %></td>
     <td><%= place.city %></td> 
     <td><%= place.zip %></td> 
     <td><%= place.country %></td> 
     <td><%= place.overall %></td>        
   </tr>
 <% end %>
</table>>
<% end %>