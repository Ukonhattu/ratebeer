<h1>New Beer</h1>
<p id="notice"></p>
<%= form_for(@beer) do |f| %>
    name: <%= f.text_field :name%>
    style: <%= f.select :style_id, options_from_collection_for_select(@styles, :id, :to_s)%>
    Brewery: <%= f.select :brewery_id, options_from_collection_for_select(@breweries, :id, :to_s) %>

  <%= f.submit class:"btn btn-primary" %>
<% end %>

<%= link_to 'Back', beers_path %>
